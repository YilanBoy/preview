{
    "name": "yilanboy/preview",
    "description": "Generate the preview image",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "allenjiang",
            "email": "allenjianggo@yahoo.com"
        }
    ],
    "scripts": {
        "run-server": "php -S localhost:8000 -t public/",
        "run-tests": "./vendor/bin/pest"
    },
    "keywords": [
        "preview",
        "image"
    ],
    "require": {
        "php": "^8.0",
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.0.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Yilanboy\\Preview\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
